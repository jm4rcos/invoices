{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "src/dtos/consumer.dto.ts"],
  "exclude": ["node_modules", "dist"]
}
